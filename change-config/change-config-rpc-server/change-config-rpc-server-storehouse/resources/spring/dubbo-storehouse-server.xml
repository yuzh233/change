<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="change-storehouse-server"  />

    <!-- 使用广播注册中心暴露服务地址 -->
    <!--<dubbo:registry address="zookeeper://120.77.159.152:2181" />-->
    <dubbo:registry address="zookeeper://120.77.159.152:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20881" />

    <!-- 暴露的服务接口 -->
    <dubbo:service interface="me.cathub.change.api.rpc.server.storehouse.StorehouseRpcServer" ref="storehouseRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.storehouse.StorehouseCountryRpcServer" ref="storehouseCountryRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.storehouse.StorehouseProductStockRpcServer" ref="storehouseProductStockRpcServer" />

    <bean id="storehouseRpcServer" class="me.cathub.change.storehouse.rpc.server.StorehouseRpcServerImpl"/>
    <bean id="storehouseCountryRpcServer" class="me.cathub.change.storehouse.rpc.server.StorehouseCountryRpcServerImpl"/>
    <bean id="storehouseProductStockRpcServer" class="me.cathub.change.storehouse.rpc.server.StorehouseProductStockRpcServerImpl"/>

    <dubbo:reference id="productRpcServer" interface="me.cathub.change.api.rpc.server.product.ProductRpcServer" />
</beans>